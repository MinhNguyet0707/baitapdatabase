CREATE TABLE skin(
id INT PRIMARY key AUTO_INCREMENT,
NAME VARCHAR(100),
price VARCHAR(100),
created_at DATE 
);
CREATE TABLE figure(
id INT PRIMARY key AUTO_INCREMENT,
NAME VARCHAR(100),
POSITION VARCHAR(200),
skin_id INT,
FOREIGN KEY (skin_id) REFERENCES skin(id)
);

CREATE TABLE skin_figure(
skin_id INT,
figure_id INT,
FOREIGN KEY (skin_id) REFERENCES skin(id),
FOREIGN KEY (figure_id) REFERENCES figure(id)
);

